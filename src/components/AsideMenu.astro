---
import LibraryIcon from "@/icons/Library.astro"
import HomeIcon from "@/icons/Home.astro"
import SearchIcon from "@/icons/Search.astro"
import SideMenuItem from "@/components/SideMenuItem.astro"
import { playlists } from "@/lib/data"
import SideMenuCard from "@/components/SideMenuCard.astro"
---

<nav class="flex flex-1 flex-col gap-2">
  <div class="rounded-lg bg-zinc-900 p-2">
    <ul>
      <SideMenuItem href="/">
        <HomeIcon />
        Inicio
      </SideMenuItem>
      <SideMenuItem href="/search">
        <SearchIcon />
        Buscar
      </SideMenuItem>
    </ul>
  </div>
  <div class="flex-1 rounded-lg bg-zinc-900 p-2">
    <ul>
      <SideMenuItem href="/library/playlists">
        <LibraryIcon />
        Tu biblioteca
      </SideMenuItem>

      {playlists.map((playlist) => <SideMenuCard playlist={playlist} />)}
    </ul>
  </div>
</nav>
<LibraryIcon />
